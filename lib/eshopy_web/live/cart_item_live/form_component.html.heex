<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="cart_item-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <strong>Quantity:</strong>
    <span id="qty"><%= select f, :quantity, 1..10 %></span>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
